#!/bin/sh

usage() {

	echo "$0 yes/no"
	exit
}

[ $# -ne 1 ] && usage

if [ "$1" = "yes" ]; then
	docker compose -p monotempo-offline -f "$(dirname $0)/docker-compose.yml" pause
elif [ "$1" = "no" ]; then
	docker compose -p monotempo-offline -f "$(dirname $0)/docker-compose.yml" unpause
else
	usage
fi

