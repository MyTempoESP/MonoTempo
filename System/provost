#!/bin/sh

set -o xtrace

MYTEMPO_DATA=

reset_wifi() {

    nmcli conn down MyTempo
    sleep 2
    nmcli -w 10 conn up MyTempo
}

reset_lte4g() {

    nmcli conn down chip
    sleep 1
    nmcli -w 10 conn up chip
}

while true
do
    read -r COMMAND < "$MYTEMPO_DATA"/database/sig-device-operation

    [ "$COMMAND" =  "wifi" ] && reset_wifi
    [ "$COMMAND" = "lte4g" ] && reset_lte4g
done
